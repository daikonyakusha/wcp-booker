<h1 class="edit-title">Editing Book</h1>

 <% if @book.errors.any? %>
<div class="error-message">
  <div class="error-message-top"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <div class="error-message-main">
    <ul class="error-message-content">
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
  <% end %>
  </ul>
  </div>
</div>
<% end %>

<%= form_with model:@book, local:true do |f| %>
<h4 class="form1">Title</h4>
<%= f.text_field :title %>
<h4 class="form2">Body</h4>
<%= f.text_area :body %>
<div class="submit"><%= f.submit 'Update Book' %></div>
<% end %>
<div class="link">
<%= link_to"show", book_path(@book),class:"table-content" %>
<%= "|" %>
<%= link_to"back", books_path ,class:"table-content"%>
</div>