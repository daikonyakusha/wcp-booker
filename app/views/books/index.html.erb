<div class="head">
  <h1 class="head-name">Books</h1>
</div>
<table>
  <thead>
    <tr class="table-title">
      <th >Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr class="table-main">
      <th class="table-content"><%= book.title %></th>
      <th class="table-content"><%= book.body %></th>
      <th><%= link_to'show',book_path(book),class:"table-content" %></th>
      <th><%= link_to'edit',edit_book_path(book),class:"table-content" %></th>
      <th ><%= link_to'destroy',book_path(book), method: :delete,class:"table-content" %></th>
    </tr>
    <% end %>
  </tbody>
</table>

<main class="form-main">
  <h1 class="head-name">New book</h1>

  <% if @book.errors.any? %>
<div class="error-message">
  <div class="error-message-top"><%= @book.errors.count %> errors prohibited this book from being saved:
  </div>
  <div class="error-message-main">
    <ul class="error-message-content">
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
    </ul>
  </div>
</div>
<% end %>

  <%= form_with model:@book, local:true do |f| %>
  <h4 class="form1">Title</h4>
  <%= f.text_field :title %>
  <h4 class="form2">Body</h4>
  <%= f.text_area :body %>
  <div class="submit">
  <%= f.submit 'Create Book' %>
  <% end %>
  </div>
</main>