<% if @book.errors.any? %>
<div class="error-message">
  <div class="error-message-top"><%= if @book.error.count %> errors prohibited this book from being saved:</div>
  <ul class="error-message-main">
     <%= @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
  <% end %>
  </ul>
</div>

<main>
  <h1 class="head-name">New book</h1>
  <%= form_with model :@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div class="create">
  <%= f.submit 'Create Book' %>
  <% end %>
  </div>
</main>
